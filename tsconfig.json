{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "allowJs": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "target": "es2020",
    "module": "es2020",
    "declaration": true,
    "declarationMap": true,

    "lib": ["dom", "es2020"],

    "outDir": "./dist",
    "rootDir": "./src",
    "noUnusedLocals": false
  },

  "ts-node": {
    "files": true,
    "transpileOnly": true
  },

  "include": ["./src/*", "./src/**/*"]
}
